@model IEnumerable<Sln.Estoque.Domain.DTO.LayoutDTO>

@{
	ViewData["Title"] = "Layouts";
	int contador = 0;
}

<div id="divBtnSearch" class="d-flex align-middle justify-content-between">
	<p class="btnNewItem">
		<a class="btn btn-dark" asp-action="Create">Novo Layout</a>
	</p>
	<div class="div-search-bar input mb-3 col-md-3 d-flex justify-content-end align-middle align-items-center" style="height:2.5em;margin-top:2px;">
		<button onclick="showBar()" type="submit" class="btn-sm buttonBar btn">
			<img src="~/img/products/search.png" width="22" class="m-1 align-middle" />
		</button>
		<input type="text" id="myInput" class="searchBar form-control input-home" placeholder="Pesquisar...(layout ou string)">
	</div>
</div>

<table class="table">
	<thead>
		<tr>
			<th class="text-center">
				Nº
			</th>
			<th class="text-center">
				Layout
			</th>
			<th class="text-center">
				String de Busca
			</th>
			<th class="text-center">
				Multiplicador
			</th>
			<th id="headerAction" class="text-center">Ações</th>
		</tr>
	</thead>
	<tbody id="tabelaIndex">
		@foreach (var item in Model)
		{
			<tr>
				@{
					contador++;
					<td class="text-center align-middle">
						@contador
					</td>
				}
				<td class="text-center align-middle">
					@Html.DisplayFor(modelItem => item.viewName)
				</td>
				<td class="text-center align-middle">
					@Html.DisplayFor(modelItem => item.fileName)
				</td>
				<td class="text-center align-middle">
					x @Html.DisplayFor(modelItem => item.multiplier)
				</td>
				<td class="text-center align-middle btnActions">
					<a class="btn btn-secondary me-1 btnEditProd" asp-action="Edit" asp-route-id="@item.id">Editar</a>
					<a class="btn btn-danger btnDelProd me-1" href="#" onclick="deleteLayout(@item.id, '@item.viewName')"> Excluir</a>
				</td>
			</tr>
		}
	</tbody>
</table>