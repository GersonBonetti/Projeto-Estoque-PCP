@model Sln.Estoque.Domain.DTO.UnitDTO

@{
    ViewData["Title"] = "Adicionar Unidade";
}

<h1>Adicionar nova Medida</h1>

<h4>Unidades de Medidas</h4>
<hr />
<div class="row">
    <div class="col-md-4 my-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-3">
                <label asp-for="name" class="control-label mb-1"></label>
                <input asp-for="name" class="form-control border-dark">
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Adicionar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div class="mb-5">
    <a asp-action="Index" class="text-decoration-none link-dark">Voltar para a lista</a>
</div>
